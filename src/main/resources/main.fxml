<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.Controller">

    <center>
        <ImageView fx:id="imageView" fitHeight="0" fitWidth="0"
                   preserveRatio="true" BorderPane.alignment="CENTER"/>
    </center>

    <bottom>
        <HBox spacing="20" alignment="CENTER" style="-fx-padding: 15;">
            <!-- Кнопка "Назад" -->
            <Button text="←" onAction="#previousImage" prefWidth="60" style="-fx-font-size: 20;"/>

            <!-- Основные кнопки -->
            <Button fx:id="startButton" onAction="#startSlideshow" text="%button.start" prefWidth="150"/>
            <Button fx:id="stopButton" onAction="#stopSlideshow" text="%button.stop" prefWidth="150"/>
            <Button fx:id="chooseDirButton" onAction="#chooseDirectory" text="%button.chooseDir" prefWidth="200"/>

            <!-- Кнопка "Вперёд" -->
            <Button text="→" onAction="#nextImage" prefWidth="60" style="-fx-font-size: 20;"/>
        </HBox>
    </bottom>

    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>
</BorderPane>